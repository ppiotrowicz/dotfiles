:: default   : yabai -m config normal_window_border_color  0xff21242b
:: focus   @ : yabai -m config normal_window_border_color  0xff5699af  # Focus window, desktop, monitors
:: grid    @ : yabai -m config normal_window_border_color  0xffecbe7b  # Floating window layout
:: swap    @ : yabai -m config normal_window_border_color  0xffff6c6b  # Swap windows
:: resize  @ : yabai -m config normal_window_border_color  0xff98be65  # Resize window operations

default                      < ctrl - return     ; focus
focus, grid, swap, resize    < ctrl - return     ; default
focus, grid, swap, resize    < escape            ; default
focus, grid, swap, resize    < return            ; default
focus, grid, swap, resize    < ctrl - g          ; default

focus, grid, swap, resize    < f                 ; focus
focus, grid, swap, resize    < g                 ; grid
focus, grid, swap, resize    < s                 ; swap
focus, grid, swap, resize    < r                 ; resize

# Bindings in all modes
focus, grid, swap, resize    < q                 : yabai -m window --close

# Window focus movement
focus           < k                 : yabai -m window --focus north
focus           < j                 : yabai -m window --focus south
focus           < l                 : yabai -m window --focus east
focus           < h                 : yabai -m window --focus west

# Space focus movement
focus           < cmd - c           : yabai -m space --focus 1 ; skhd -k "ctrl - return"   ; slack
focus           < cmd - g           : yabai -m space --focus 2 ; skhd -k "ctrl - return"   ; gmail
focus           < cmd - w           : yabai -m space --focus 3 ; skhd -k "ctrl - return"   ; web
focus           < cmd - s           : yabai -m space --focus 4 ; skhd -k "ctrl - return"   ; stuff
focus           < cmd - e           : yabai -m space --focus 5 ; skhd -k "ctrl - return"   ; emacs
focus           < cmd - t           : yabai -m space --focus 6 ; skhd -k "ctrl - return"   ; terminal
focus           < cmd - m           : yabai -m space --focus 7 ; skhd -k "ctrl - return"   ; music

focus           < 1                 : yabai -m space --focus 1 ; skhd -k "ctrl - return"
focus           < 2                 : yabai -m space --focus 2 ; skhd -k "ctrl - return"
focus           < 3                 : yabai -m space --focus 3 ; skhd -k "ctrl - return"
focus           < 4                 : yabai -m space --focus 4 ; skhd -k "ctrl - return"
focus           < 5                 : yabai -m space --focus 5 ; skhd -k "ctrl - return"
focus           < 6                 : yabai -m space --focus 6 ; skhd -k "ctrl - return"
focus           < 7                 : yabai -m space --focus 7 ; skhd -k "ctrl - return"

focus           < n                 : yabai -m space --focus next
focus           < p                 : yabai -m space --focus prev

focus           < shift - n         : yabai -m space --create
focus           < shift - x         : yabai -m space --destroy

# Change the layout mode of current space
focus              < cmd - b           : yabai -m space --layout bsp
focus              < cmd - f           : yabai -m space --layout float

# Swap windows
swap            < k                 : yabai -m window --swap north
swap            < j                 : yabai -m window --swap south
swap            < l                 : yabai -m window --swap east
swap            < h                 : yabai -m window --swap west

# Move window to space
focus           < shift - c           : yabai -m window --space 1 ; skhd -k "ctrl - return"
focus           < shift - g           : yabai -m window --space 2 ; skhd -k "ctrl - return"
focus           < shift - w           : yabai -m window --space 3 ; skhd -k "ctrl - return"
focus           < shift - s           : yabai -m window --space 4 ; skhd -k "ctrl - return"
focus           < shift - e           : yabai -m window --space 5 ; skhd -k "ctrl - return"
focus           < shift - t           : yabai -m window --space 6 ; skhd -k "ctrl - return"
focus           < shift - m           : yabai -m window --space 7 ; skhd -k "ctrl - return"

focus           < shift - 1           : yabai -m window --space 1 ; skhd -k "ctrl - return"
focus           < shift - 2           : yabai -m window --space 2 ; skhd -k "ctrl - return"
focus           < shift - 3           : yabai -m window --space 3 ; skhd -k "ctrl - return"
focus           < shift - 4           : yabai -m window --space 4 ; skhd -k "ctrl - return"
focus           < shift - 5           : yabai -m window --space 5 ; skhd -k "ctrl - return"
focus           < shift - 6           : yabai -m window --space 6 ; skhd -k "ctrl - return"
focus           < shift - 7           : yabai -m window --space 7 ; skhd -k "ctrl - return"
