" Functions {{{
function! Preserve(command)
  " Preparation: save last search, and cursor position.
  let _s=@/
  let l = line(".")
  let c = col(".")
  " Do the business:
  execute a:command
  " Clean up: restore previous search history, and cursor position
  let @/=_s
  call cursor(l, c)
endfunction
" }}}
" Keyboard {{{

" turn off search highlight
nnoremap <leader>h :noh<CR>

" fix inconsistencies
nnoremap Y y$

" Move around splits with <c-hjkl>
nnoremap <c-j> <c-w>j
nnoremap <c-k> <c-w>k
nnoremap <c-h> <c-w>h
nnoremap <c-l> <c-w>l

" windows
nmap <leader>ws :split<cr>
nmap <leader>wv :vsplit<cr>
nmap <leader>wc :hide<cr>

" Fix whitespace
nmap _$ :call Preserve("%s/\\s\\+$//e")<CR>

" Format file
nmap _= :call Preserve("normal gg=G")<CR>

" Toggle NERDTree
map <leader>t :NERDTreeToggle<CR>

" edit current vimrc
map <leader>hc :e ~/.vimrc<CR>
" reload vimrc
" map <leader>/ :so $MYVIMRC<CR>

" delete current file
nnoremap <leader>fr :call delete(expand('%')) \| bdelete!<CR>

" save as root
cmap w!! w !sudo tee > /dev/null %

" close current buffer
nnoremap <leader>bd :bd<cr>

" reformat json
autocmd FileType json nnoremap <leader>= :%!python -m json.tool<CR>

" rebalance windows on terminal resize
autocmd VimResized * :wincmd =

" zoom current window
nnoremap <leader>- :wincmd _<cr>:wincmd \|<cr>
" rebalance windows
nnoremap <leader>= :wincmd =<cr>

" Find word under cursor
nnoremap <leader>* :Ack <c-r><c-w><CR>

" Goyo toggle
nnoremap <Leader>! :Goyo<CR>
"
" }}}

